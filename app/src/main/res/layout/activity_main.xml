<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="30dp">

        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageView
                android:scaleType="center"
                android:id="@+id/iv_pen_color"
                android:src="@drawable/ic_color_lens_24dp"
                android:layout_width="40dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageView
                android:scaleType="center"
                android:id="@+id/iv_pen_size"
                android:src="@drawable/ic_line_weight_24dp"
                android:layout_width="40dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageView
                android:scaleType="center"
                android:id="@+id/iv_pen_select"
                android:src="@drawable/ic_select_all_gray_24dp"
                android:layout_width="40dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageView
                android:scaleType="center"
                android:id="@+id/iv_insert_img"
                android:src="@drawable/ic_photo_24dp"
                android:layout_width="40dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageView
                android:scaleType="center"
                android:id="@+id/iv_multi"
                android:src="@drawable/ic_bubble_chart_gray_24dp"
                android:layout_width="40dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageView
                android:scaleType="center"
                android:id="@+id/iv_eraser"
                android:src="@drawable/ic_crop_black_24dp"
                android:layout_width="40dp"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

    <com.example.writingboard.view.widget.WritingBoard
        android:id="@+id/writing_board"
        android:layout_above="@id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>